{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OneShot",
  "description": "Top-level data in `cmd.toml` files",
  "type": "object",
  "properties": {
    "bin": {
      "anyOf": [
        {
          "$ref": "#/$defs/Bin"
        },
        {
          "type": "null"
        }
      ]
    },
    "args": {
      "$ref": "#/$defs/Args",
      "default": []
    },
    "env": {
      "$ref": "#/$defs/Env",
      "default": {
        "inherit": null,
        "add": {},
        "remove": []
      }
    },
    "stdin": {
      "type": [
        "string",
        "null"
      ],
      "default": null
    },
    "stdout": {
      "type": [
        "string",
        "null"
      ],
      "default": null
    },
    "stderr": {
      "type": [
        "string",
        "null"
      ],
      "default": null
    },
    "stderr-to-stdout": {
      "type": "boolean",
      "default": false
    },
    "status": {
      "anyOf": [
        {
          "$ref": "#/$defs/CommandStatus"
        },
        {
          "type": "null"
        }
      ]
    },
    "binary": {
      "type": "boolean",
      "default": false
    },
    "timeout": {
      "anyOf": [
        {
          "$ref": "#/$defs/Duration"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    },
    "fs": {
      "$ref": "#/$defs/Filesystem",
      "default": {
        "cwd": null,
        "base": null,
        "sandbox": null
      }
    }
  },
  "$defs": {
    "Bin": {
      "description": "Target under test",
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "ignore"
          ]
        },
        {
          "type": "object",
          "properties": {
            "path": {
              "type": "string"
            }
          },
          "required": [
            "path"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            }
          },
          "required": [
            "name"
          ],
          "additionalProperties": false
        }
      ]
    },
    "Args": {
      "anyOf": [
        {
          "$ref": "#/$defs/JoinedArgs"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "JoinedArgs": {
      "type": "object",
      "properties": {
        "inner": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "inner"
      ]
    },
    "Env": {
      "description": "Describe command's environment",
      "type": "object",
      "properties": {
        "inherit": {
          "type": [
            "boolean",
            "null"
          ],
          "default": null
        },
        "add": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {}
        },
        "remove": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    },
    "CommandStatus": {
      "description": "Expected status for command",
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "success",
            "failed",
            "interrupted",
            "skipped"
          ]
        },
        {
          "type": "object",
          "properties": {
            "code": {
              "type": "integer",
              "format": "int32"
            }
          },
          "required": [
            "code"
          ],
          "additionalProperties": false
        }
      ]
    },
    "Duration": {
      "type": "object",
      "properties": {
        "secs": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0
        },
        "nanos": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        }
      },
      "required": [
        "secs",
        "nanos"
      ]
    },
    "Filesystem": {
      "description": "Describe the command's filesystem context",
      "type": "object",
      "properties": {
        "cwd": {
          "type": [
            "string",
            "null"
          ]
        },
        "base": {
          "description": "Sandbox base",
          "type": [
            "string",
            "null"
          ]
        },
        "sandbox": {
          "type": [
            "boolean",
            "null"
          ]
        }
      }
    }
  }
}